<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background_app"
    tools:context=".view.MakeOrderActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="30dp"
                app:srcCompat="@mipmap/welt_chef_name" />

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="match_parent"
                android:layout_height="98dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@mipmap/welt_chef_logo" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-black"
                android:text="¿Qué servicio deseas?"
                android:textColor="#FF0000"
                android:textSize="22sp" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">

                <CheckBox
                    android:id="@+id/chefHomeCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Chef a Domicilio"
                    android:textSize="16sp" />

                <Space
                    android:layout_width="24dp"
                    android:layout_height="match_parent"></Space>

                <CheckBox
                    android:id="@+id/chefKitchenCheck"
                    android:layout_width="167dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="Clases de Cocina"
                    android:textSize="16sp" />


            </LinearLayout>

            <CheckBox
                android:id="@+id/ovenCheck"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginStart="125dp"
                android:fontFamily="sans-serif-medium"
                android:text="¿Tienes Horno?"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/numPeopleET"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginStart="95dp"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="¿Cuántas Personas?"
                android:inputType="textPersonName"
                tools:ignore="MissingConstraints" />

            <Spinner
                android:id="@+id/spinnerTypes"
                android:layout_width="335dp"
                android:layout_height="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="38dp"
                android:entries="@array/types_array" />

            <CalendarView
                android:id="@+id/calendarSelect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="25dp"/>


            <EditText
                android:id="@+id/placeET"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="100dp"
                android:ems="10"
                android:hint="Lugar"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/searchService"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginStart="145dp"
                android:layout_marginBottom="52dp"
                android:background="@drawable/round_button"
                android:text="Buscar Servicio"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>